datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id
  email        String      @unique
  name         String
  hashPass     String
  typeUser     String      @default("cliente")
  orders       Order[]
}

model Order {
  orderId      String      @id
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  menuId       String
  menu         Menu?       @relation(fields: [menuId], references: [menuId])
  dateHourOrder String
  orderStatus  String
}

model Restaurante {
  id           String      @id
  nome         String
  cnpj         String
  endereco     String
  telefone     String
  restauranteId     String
  menu         Menu[]
}

model Menu {
  menuId       String      @id
  nome         String
  ingredientes String
  descricao    String
  preco        Float
  img          String?
  orders       Order[]
  restaurante  Restaurante @relation(fields: [restauranteId], references: [id])
  restauranteId    String
  promocao     Promocao[]
}


model Promocao {
  id           String      @id
  nome         String
  descricao    String
  preco        Float
  img          String?
  menuId       String
  menu         Menu[]
}

